{
  "compilerOptions": {
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": false,
    "noEmit": false,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strict": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "baseUrl": "./",
    "lib": [
      "esnext",
      "DOM"
    ],
    "paths": {
      "@cli/*": ["cli/*"]
    }
  },
  "include": [
    "cli",
    "vuniversal"
  ],
  "exclude": [
    "node_modules",
    "cli-dist",
    "vun-dist"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
