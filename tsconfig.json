{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/": ["./src"],
      "~/*": ["./src/*"],
      "@": ["./src/"],
      "@/*": ["./src/*"],
    },
    "types": [
      "@types/node",
      "./src/types"
    ]
  },
  "exclude": ["fork_modules", "node_modules"]
}