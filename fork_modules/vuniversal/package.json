{
  "name": "vuniversal",
  "version": "0.1.0",
  "description": "vue universal",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/surmon-china/vuniversal.git"
  },
  "keywords": [
    "vue",
    "ssr"
  ],
  "author": "Surmon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/surmon-china/vuniversal/issues"
  },
  "homepage": "https://github.com/surmon-china/vuniversal#readme",
  "main": "vuniversal/index.js",
  "types": "vuniversal/index.d.ts",
  "files": [
    "lib",
    "bin",
    "dist"
  ],
  "bin": {
    "vun": "bin/vun.js"
  },
  "scripts": {
    "dev": "ts-node ./lib/scripts/start/index.ts",
    "cleanup": "rm -rf ./bin/*.js ./lib/*.js",
    "build:cli": "npm run cleanup && tsc ./bin ./lib",
    "build:core": "npm run cleanup && cross-env NODE_ENV=production abc build",
    "lint": "abc lint --ext .ts,.vue src tests",
    "test": "abc test",
    "test:watch": "abc test --watch -i",
    "rebirth": "npm run lint && npm test && npm run build",
    "release": ". ./scripts/release.sh"
  }
}
